# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=4000
NODE_ENV=development  # production | development | test

# ============================================
# CORS
# ============================================
CORS_ORIGIN=http://localhost:3000  # En producción: https://tu-dominio.vercel.app

# ============================================
# DATABASE - SUPABASE (PostgreSQL)
# ============================================
# ⚠️ NO USAR DATABASE_URL directo - usamos Supabase client
# DATABASE_URL solo para referencia/migraciones manuales
DATABASE_URL=postgresql://postgres:PASSWORD@db.XXXXXXXX.supabase.co:5432/postgres

# ============================================
# SUPABASE CONFIGURATION
# ============================================
SUPABASE_URL=https://XXXXXXXX.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ============================================
# JWT SECRETS (Generate with: openssl rand -base64 32)
# ⚠️ CAMBIAR ESTOS EN PRODUCCIÓN
# ============================================
JWT_SECRET=your_super_secure_jwt_secret_key_here_minimum_32_characters
JWT_EXPIRE=15m
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_key_here_minimum_32_characters
JWT_REFRESH_EXPIRE=7d

# ============================================
# STRIPE CONFIGURATION (Test mode para desarrollo)
# ⚠️ Usar sk_live_* en producción
# ============================================
# ============================================
# Test keys (development)
STRIPE_SECRET_KEY=your_stripe_test_key_here
STRIPE_WEBHOOK_SECRET=your_webhook_secret_here
STRIPE_PRICE_ID_MONTHLY=your_monthly_price_id
STRIPE_PRICE_ID_ANNUAL=your_annual_price_id

# Production keys (uncomment for production)
# STRIPE_SECRET_KEY=sk_live_51XXXXXXXXXXXXXXXXXXXXXXXXXXXX
# STRIPE_WEBHOOK_SECRET=whsec_XXXXXXXXXXXXXXXXXXXXXXXXXXXX

# ============================================
# PAYPAL CONFIGURATION
# ============================================
# Sandbox (development)
PAYPAL_CLIENT_ID=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
PAYPAL_CLIENT_SECRET=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
PAYPAL_MODE=sandbox  # sandbox | live

# Production (uncomment for production)
# PAYPAL_CLIENT_ID=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
# PAYPAL_CLIENT_SECRET=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
# PAYPAL_MODE=live

# ============================================
# EMAIL CONFIGURATION
# ============================================
# Gmail SMTP
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password  # Generate at: https://myaccount.google.com/apppasswords
EMAIL_FROM=noreply@pqtrader.com

